---
import logo from '../assets/icons/Logo.png';
import { Picture } from 'astro:assets';
---

<div class="flex flex-col items-center gap-y-4
mt-4 pl-4
sm:flex-row sm:gap-x-3 sm:pl-0
md:mt-0">
    <a href="/">
        <Picture
            src={logo}
            alt="Site Logo"
            width="48"
            height="48"
            class="rounded-t-xl"
            formats={['avif', 'webp']}
            loading="eager"
            fallbackFormat="jpg"
            class="rounded-t-xl mx-auto object-cover"
        />
    </a>
    <h1 class="text-center text-2xl font-serif"><a href="/">EMAN HAROUT</a></h1>
</div>
